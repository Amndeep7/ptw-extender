{
    "env": {
        "browser": true
    },

    "extends": "airbnb-base",

    "globals": {
        "browser": true
    },

    "rules": {
        "indent": ["error", "tab"],
        "max-len": ["error", { "code": 120, "ignoreComments": true }],
        "no-tabs": 0,
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "quotes": ["error", "double"],
        "quote-props": ["error", "always"]
    }
}

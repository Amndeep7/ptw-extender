{
  "name": "ptw-extender",
  "version": "4.0.0",
  "description": "Extension that adds titles to your MyAnimeList, AniList, or Kitsu plan-to-watch/read list with the url of where you found it added as a comment.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Amndeep7/ptw-extender.git"
  },
  "author": "Amndeep Singh Mann",
  "license": "MIT",
  "browser": "menu.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "web-ext": "^5.4.1"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "dompurify": "^2.2.6",
    "linkifyjs": "^2.1.9",
    "showdown": "^1.9.1",
    "webextension-polyfill": "^0.7.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "emcaVersion": 2017,
      "sourceType": "script",
      "emcaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": true,
      "es2017": true,
      "webextensions": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "max-len": [
        "error",
        120,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": false,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "lib/"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
